<% if user_signed_in? %>
  <h1>Welcome <%= @user.username %>!</h1>
  
  <div class="container">
    <h1><%= @user.username %>'s projects</h1>
    <ul>
      <% @projects.each do |project| %>
        <li><%= link_to project.name, project_path(project.id) %></li>
      <% end %>
    </ul>
  </div>

<% else %>
  <p>Please <%= link_to 'sign in', new_user_session_path %> to create/join a project, or <%= link_to 'sign up', new_user_registration_path %> if you don't have an account</p>
<% end %>
