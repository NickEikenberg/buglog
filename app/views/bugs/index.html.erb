<h1>Bugs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Branch</th>
      <th>Severity</th>
      <th>Priority</th>
      <th>Reported by</th>
      <th>Assigned to</th>
      <th>Status</th>
      <th>Repro steps</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug.title %></td>
        <td><%= bug.description %></td>
        <td><%= bug.branch %></td>
        <td><%= bug.severity %></td>
        <td><%= bug.priority %></td>
        <td><%= bug.reported_by %></td>
        <td><%= bug.assigned_to %></td>
        <td><%= bug.status %></td>
        <td><%= bug.repro_steps %></td>
        <td><%= link_to 'Show', bug %></td>
        <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
        <td><%= link_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bug', new_bug_path %>
